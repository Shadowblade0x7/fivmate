    <script>
        // Initialize GSAP ScrollTrigger
        gsap.registerPlugin(ScrollTrigger);
        
        // Loader with Cinematic Transition
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.querySelector('.loader').classList.add('hidden');
                
                // Start video after loader
                const video = document.getElementById('colorPreview');
                video.play().catch(e => console.log('Video autoplay failed:', e));
                
                // Animate navigation elements
                gsap.to('.nav-links a', {
                    opacity: 1,
                    y: 0,
                    duration: 0.5,
                    stagger: 0.1,
                    delay: 0.5
                });
                
                gsap.to('.theme-toggle, .mobile-menu-btn', {
                    opacity: 1,
                    y: 0,
                    duration: 0.5,
                    delay: 0.8
                });
            }, 2000);
        });

        // Theme Toggle
        const themeToggle = document.querySelector('.theme-toggle');
        const themeIcon = themeToggle.querySelector('i');
        
        themeToggle.addEventListener('click', () => {
            const isLight = document.body.getAttribute('data-theme') === 'light';
            document.body.setAttribute('data-theme', isLight ? 'dark' : 'light');
            
            themeIcon.className = isLight ? 'fas fa-moon' : 'fas fa-sun';
        });
        
        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
            
            // Update progress indicator
            const winHeight = window.innerHeight;
            const docHeight = document.documentElement.scrollHeight;
            const scrollTop = window.pageYOffset;
            const scrollPercent = scrollTop / (docHeight - winHeight);
            document.querySelector('.progress-indicator').style.transform = `scaleX(${scrollPercent})`;
            
            // Update gradient based on scroll
            updateGradient(scrollPercent);
        });

        // Gradient scroll effect
        function updateGradient(scrollPercent) {
            const hueShift = scrollPercent * 60;
            const gradientBg = document.querySelector('.gradient-bg');
            
            if (scrollPercent < 0.25) {
                // Section 1: Original colors
                gradientBg.style.background = `linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%)`;
            } else if (scrollPercent < 0.5) {
                // Section 2: Shift to warmer tones
                gradientBg.style.background = `linear-gradient(135deg, #FF6B6B 0%, #FECA57 100%)`;
            } else if (scrollPercent < 0.75) {
                // Section 3: Shift to cooler tones
                gradientBg.style.background = `linear-gradient(135deg, #54A0FF 0%, #5F27CD 100%)`;
            } else {
                // Section 4: Return to original
                gradientBg.style.background = `linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%)`;
            }
        }

        // Mobile Menu Toggle
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        
        mobileMenuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            navLinks.classList.toggle('active');
            document.body.style.overflow = navLinks.classList.contains('active') ? 'hidden' : '';
        });

        // Close menu when tapping outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.nav-links') && !e.target.closest('.mobile-menu-btn')) {
                navLinks.classList.remove('active');
                document.body.style.overflow = '';
            }
        });

        // Close menu when tapping links
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                    
                    // Close mobile menu if open
                    navLinks.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        });
        
        // Hero animation
        gsap.to('.hero h1', {
            opacity: 1,
            y: 0,
            duration: 1,
            delay: 0.5,
            ease: "power2.out"
        });
        
        gsap.to('.hero p', {
            opacity: 1,
            y: 0,
            duration: 1,
            delay: 0.8,
            ease: "power2.out"
        });
        
        gsap.to('.btn', {
            opacity: 1,
            y: 0,
            duration: 1,
            delay: 1.1,
            ease: "power2.out"
        });
        
        // Section title animations
        gsap.utils.toArray('.section-title').forEach(title => {
            gsap.to(title, {
                opacity: 1,
                y: 0,
                duration: 0.8,
                scrollTrigger: {
                    trigger: title,
                    start: 'top 80%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Color Grade Preview
        const colorBtns = document.querySelectorAll('.color-btn');
        const videoPreview = document.getElementById('colorPreview');
        
        const colorFilters = {
            original: 'none',
            cinematic: 'contrast(1.2) saturate(1.1) brightness(0.9)',
            vintage: 'sepia(0.5) contrast(1.1) brightness(1.05)',
            dramatic: 'contrast(1.3) brightness(0.85) saturate(1.2)',
            cool: 'hue-rotate(180deg) saturate(0.8) contrast(1.1)',
            warm: 'hue-rotate(-20deg) saturate(1.2) brightness(1.05)'
        };
        
        colorBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Remove active class from all buttons
                colorBtns.forEach(b => b.classList.remove('active'));
                // Add active class to clicked button
                btn.classList.add('active');
                
                // Apply filter to video
                const filter = colorFilters[btn.getAttribute('data-filter')];
                videoPreview.style.filter = filter;
            });
            
            // Animate color buttons
            gsap.to(btn, {
                opacity: 1,
                y: 0,
                duration: 0.5,
                delay: 0.2,
                scrollTrigger: {
                    trigger: btn,
                    start: 'top 85%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Animate video preview
        gsap.to('.video-preview', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
                trigger: '.video-preview',
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });
        
        // Skill bars animation
        gsap.utils.toArray('.skill-progress').forEach(bar => {
            gsap.to(bar, {
                width: bar.getAttribute('data-width') + '%',
                duration: 1.5,
                scrollTrigger: {
                    trigger: bar,
                    start: 'top 80%',
                    end: 'bottom 20%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Animate skill cards
        gsap.utils.toArray('.skill-card').forEach(card => {
            gsap.to(card, {
                opacity: 1,
                y: 0,
                duration: 0.8,
                scrollTrigger: {
                    trigger: card,
                    start: 'top 85%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Timeline animation
        gsap.utils.toArray('.timeline-item').forEach(item => {
            gsap.to(item, {
                opacity: 1,
                y: 0,
                duration: 0.8,
                scrollTrigger: {
                    trigger: item,
                    start: 'top 80%',
                    end: 'bottom 20%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Portfolio items animation
        gsap.utils.toArray('.portfolio-item').forEach(item => {
            gsap.to(item, {
                opacity: 1,
                y: 0,
                duration: 0.8,
                scrollTrigger: {
                    trigger: item,
                    start: 'top 85%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Contact section animations
        gsap.to('.contact-info, .contact-form', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
                trigger: '.contact-container',
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });
        
        gsap.utils.toArray('.form-group').forEach((group, i) => {
            gsap.to(group, {
                opacity: 1,
                y: 0,
                duration: 0.5,
                delay: i * 0.1,
                scrollTrigger: {
                    trigger: group,
                    start: 'top 85%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        // Footer animations
        gsap.utils.toArray('.social-link').forEach((link, i) => {
            gsap.to(link, {
                opacity: 1,
                y: 0,
                duration: 0.5,
                delay: i * 0.1,
                scrollTrigger: {
                    trigger: '.social-links',
                    start: 'top 90%',
                    toggleActions: 'play none none none'
                }
            });
        });
        
        gsap.to('.copyright', {
            opacity: 1,
            y: 0,
            duration: 0.5,
            scrollTrigger: {
                trigger: 'footer',
                start: 'top 90%',
                toggleActions: 'play none none none'
            }
        });
        
        // AI Assistant with Enhanced Q&A
        const aiAssistant = document.querySelector('.ai-assistant');
        const aiChat = document.querySelector('.ai-chat');
        const chatInput = document.querySelector('#chatInput');
        const sendButton = document.querySelector('#sendMessage');
        const chatMessages = document.querySelector('.chat-messages');
        const suggestions = document.querySelectorAll('.suggestion');

        function addMessage(text, isAI = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isAI ? 'ai-message' : 'user-message'}`;
            messageDiv.innerHTML = `<p>${text}</p>`;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function handleAIResponse(userInput) {
